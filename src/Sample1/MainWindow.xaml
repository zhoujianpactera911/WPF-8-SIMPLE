                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis MinValue="0" Name="s4x" ShowLabels="False"></lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
