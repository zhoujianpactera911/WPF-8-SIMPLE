                    </StackPanel>
                </Border>
                <Image Source="microsoft.png" Grid.Row="1" HorizontalAlignment="Right" Margin="30"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="2" Background="#F9F9FC"/>
        <Grid Grid.Row="2" Background="#F9F9FC" Margin="60 0 60 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
